package edu.kh.jdbc1;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.Scanner;

public class JDBCExample2 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		// 1단계 : JDBC 참조 변수 선언 (java.sql)
		Connection conn = null;
		Statement stmt = null;
		ResultSet rs = null;
		
		try {
			// 2단계 : 참조변수에 알맞는 객체 대입 
			Class.forName("oracle.jdbc.driver.OracleDriver");
			
			String type = "jdbc:orecle:thin:@";
			String ip = "localhost";
			String port = ":1521";
			String sid = ":XE";
			String user = "kh";
			String pw = "kh1234";
			
			conn = DriverManager.getConnection(type + ip + port + sid, user, pw);
			
			System.out.println("<입력 받은 급여보다 많이 받는(초과) 직원만 조회>");
			System.out.print("급여입력 : ");
			int input = sc.nextInt();
			
			String sql = "SELECT EMP_ID, EMP_NAME, SALARY FROM EMPLOYEE WHERE SALARY >" + input;
			
			stmt = conn.createStatement();
			
			rs = stmt.executeQuery(sql);
			
			// 3단계 : SQL을 수행해서 반환 받은 결과(ResultSet)를 한 행씩 접근해서 컬럼 값 얻어오기
			while(rs.next()) {
				
			}
			
		}catch(ClassNotFoundException e) {
			e.printStackTrace();
		}catch(SQLException e) {
			
		}finally {
			
		}
	}

}
